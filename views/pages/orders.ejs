<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/header %>

        <main role="main">
            <div class="container">
                <h2>Vos commandes</h2>

                <% if (orders.length == 0) { %>
                    <p>Pas encore de commandes.</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Date d'achat</th>
                                <th>Prix</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% for (var i = 0; i < orders.length; i++) { %>
                                <tr>
                                    <td><%= orders[i]._id; %></td>
                                    <td><a href="/<%= orders[i].product_id.file_link; %>"><%= orders[i].product_id.name; %></a></td>
                                    <td><%= orders[i].product_id.author; %></td>
                                    <td><%= orders[i].creation_date; %></td>
                                    <td><%= orders[i].EUR_price; %></td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
                <hr>
            </div>
        </main>

        <% include ../partials/footer %>
    </body>
</html>